<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#fcffffff">


    <EditText
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:id="@+id/editPost"
        android:textColor="#000000"
        android:background="#fcd4d4ca"
        android:layout_alignTop="@+id/btnPost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Post"
        android:id="@+id/btnPost"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#fc52a5c7"
        android:onClick="onClick"/>


    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="New Text"
        android:id="@+id/msgPost"
        android:layout_below="@+id/editPost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/btnPost"
        android:layout_alignEnd="@+id/btnPost" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:text="@string/hotline"
        android:id="@+id/msgHotline"
        android:textColor="#000000"
        android:visibility="invisible"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/msgPost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
